from os import getcwd
from os.path import join

class URI:
    def __init__(self, host, port, protocol="http"):
        self.host = host
        self.port = port
        self.protocol = protocol

    def __str__(self):
        return "{}://{}:{}".format(self.protocol, self.host, self.port)

